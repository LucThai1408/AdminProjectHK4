
@model IEnumerable<API.Models.Room>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var currentPage = ViewBag.CurrentPage;
    var totalPage = ViewBag.TotalPage;
    var name = ViewBag.Name as string;
}

<h1>Index</h1>

<div class="container">

    <div class="btn-success text-center text-uppercase">@TempData["msg"]</div>
    <p>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </p>
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th class="col-2">
                    @Html.DisplayNameFor(model => model.RoomId)
                </th>
                <th class="col-3">
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th class="col-3">
                    @Html.DisplayNameFor(model => model.Status)
                </th>
                <th class="col-4">
                    Action
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.RoomId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    @if (item.Status)
                    {
                        <td>Active</td>
                    }
                    else
                    {
                        <td>InActive</td>
                    }
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.RoomId" class="btn btn-success me-1">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-action="Details" asp-route-id="@item.RoomId" class="btn btn-info me-1 text-white">
                            <i class="bi bi-info-circle"></i> Details
                        </a>
                        <form asp-action="Delete" asp-route-id="@item.RoomId" method="post" style="display:inline">
                            <button type="submit" class="btn btn-danger"
                                    onclick="return confirm('Do you want to delete this record?');">
                                <i class="bi bi-trash"></i> Delete
                            </button>
                        </form>
                    </td>

                </tr>
            }
        </tbody> 
     </table> 
    @if (Model.Count() != 0)
    {
        @if (name.Trim().Equals(""))
        {
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                    <!-- Nút 'Trước' -->
                    <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                        <a class="page-link" href="?currentPage=@(currentPage - 1)" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>

                    <!-- Các số trang -->
                    @for (int i = 1; i <= totalPage; i++)
                    {
                        <li class="page-item @(i == currentPage ? "active" : "")">
                            <a class="page-link" href="?currentPage=@i">@i</a>
                        </li>
                    }

                    <!-- Nút 'Tiếp theo' -->
                    <li class="page-item @(currentPage == totalPage ? "disabled" : "")">
                        <a class="page-link" href="?currentPage=@(currentPage + 1)" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                </ul>
            </nav>
        }
        else
        {
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                    <!-- Nút 'Trước' -->
                    <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                        <a class="page-link" href="?currentPage=@(currentPage - 1)&name=@name" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>

                    <!-- Các số trang -->
                    @for (int i = 1; i <= totalPage; i++)
                    {
                        <li class="page-item @(i == currentPage ? "active" : "")">
                            <a class="page-link" href="?currentPage=@i&name=@name">@i</a>
                        </li>
                    }

                    <!-- Nút 'Tiếp theo' -->
                    <li class="page-item @(currentPage == totalPage ? "disabled" : "")">
                        <a class="page-link" href="?currentPage=@(currentPage + 1)&name=@name" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                </ul>
            </nav>
        }
    }
    else
    {
        <p class="text-center">No item!</p>
    }

</div>